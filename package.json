{
  "name": "@raminjafary/workerman",
  "version": "0.1.2",
  "description": "Run your JavaScript off the browser's main thread with inline workers",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "raminjafary <raminjafary1993@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:raminjafary/workerman.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "yarn build && npx live-server --open=tests/fixtures",
    "build": "yarn clean && tsc",
    "test": "jest --verbose --coverage",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "setup": "yarn install && yarn lint:fix && jest && yarn build",
    "release": "standard-version $* && git push --follow-tags && npm publish"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.0",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.1",
    "tsc": "^2.0.3",
    "typescript": "^4.4.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "inline-worker",
    "background-thread",
    "asynchrony with web workers",
    "web workers"
  ],
  "browserslist": "> 0.25%, not dead",
  "lint-staged": {
    "**/*.{ts, js}": [
      "prettier --write",
      "eslint --fix",
      "jest --findRelatedTests"
    ]
  }
}
