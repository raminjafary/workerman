{
  "name": "workerman",
  "version": "0.1.0",
  "description": "Spawn inline web worker",
  "main": "src/index.js",
  "repository": "git@github.com:raminjafary/workerman.git",
  "author": "raminjafary <raminjafary1993@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "NODE_ENV=production webpack",
    "test": "jest --verbose --coverage",
    "test-debug": "node --inspect-brk ./node-modules/jest/bin/jest.js --runInBand --watch",
    "test:watch": "jest --watch",
    "lint": "./node_modules/.bin/eslint --ext .ts --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "setup": "yarn install && yarn lint && jest && yarn build"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@types/compression-webpack-plugin": "6.0.1",
    "@types/html-webpack-plugin": "3.2.4",
    "@types/jest": "26.0.18",
    "@types/node": "14.14.12",
    "@types/webpack": "4.41.25",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "compression-webpack-plugin": "7.0.0",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.2.0",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.11",
    "ts-node": "9.1.1",
    "typescript": "4.1.2",
    "webpack": "5.10.0",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0"
  },
  "keywords": [
    "inline-worker",
    "background-thread",
    "asynchrony with web workers",
    "web workers"
  ],
  "browserslist": "> 0.25%, not dead",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build"
    }
  },
  "lint-staged": {
    "**/*.{ts, js}": [
      "prettier --write",
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  }
}
