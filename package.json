{
  "name": "@raminjafary/workerman",
  "version": "0.1.2",
  "description": "Run your JavaScript off the browser's main thread with inline workers",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "raminjafary <raminjafary1993@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:raminjafary/workerman.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "npx live-server --open=tests/fixtures",
    "build": "yarn clean && tsc",
    "test": "jest --verbose --coverage",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "setup": "yarn install && yarn lint:fix && jest && yarn build",
    "release": "standard-version $* && git push --follow-tags && npm publish"
  },
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@types/node": "14.14.41",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "standard-version": "9.2.0",
    "ts-jest": "26.5.5",
    "ts-loader": "8.2.0",
    "ts-node": "9.1.1",
    "tsc": "^1.20150623.0",
    "typescript": "4.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "inline-worker",
    "background-thread",
    "asynchrony with web workers",
    "web workers"
  ],
  "browserslist": "> 0.25%, not dead",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build"
    }
  },
  "lint-staged": {
    "**/*.{ts, js}": [
      "prettier --write",
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  }
}
