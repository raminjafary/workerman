{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": ["plugin:@typescript-eslint/recommended", "prettier"],
  "plugins": ["import", "prettier"],
  "rules": {
    "@typescript-eslint/no-this-alias": [
      "error",
      {
        "allowDestructuring": true,
        "allowedNames": ["_this"]
      }
    ],
    "@typescript-eslint/no-inferrable-types": [
      0,
      {
        "ignoreParameters": 0,
        "ignoreProperties": 0
      }
    ]
  }
}
